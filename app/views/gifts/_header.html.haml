.header
  .header__main
    .header__main__name
      .mark
        %i.fas.fa-hands
          %i.fas.fa-heart
        あしなが支援サイト
    .header__main__box
      - if user_signed_in?
        - if @profile == nil
          = image_tag "kiki.png"
          = link_to "プロフィールを作成する", new_profile_path, method: :get, class: "tab"
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "tab"
        - else
          = link_to profile_path(@user), method: :get, class: "" do
            = image_tag(@profile.picture.url)
      - else
        = link_to "新規登録", new_signup_path, class: "menu"
        = link_to "ログイン", new_user_session_path, class: "menu"
  .header__message
    = link_to new_hope_path do
      %p +
      %i.fas.fa-rainbow
