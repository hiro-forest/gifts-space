.registration
  .registration__upper
  .registration__main
    .registration__main__container
      .registration__main__container__thema
        %i.fas.fa-hands
      .registration__main__container__form
        = form_for(resource, as: resource_name, url: session_path(resource_name), class:"devise-login-container__main__container__form") do |f|
          .field
            = f.label :email, "Email"
            %div
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-default"
          .field
            = f.label :password, "Password"
            %div
              = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-default"
          .actions
            = f.submit "ログイン", class:""
          .field
            .field__box
              = link_to "新規会員登録", new_signup_path, method: :get, id: "shinki"
=render "gifts/footer"
